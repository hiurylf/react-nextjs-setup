{
   "settings": {
      "import/resolver": {
         "node": {
            "extensions": [
               ".js",
               ".jsx",
               ".ts",
               ".tsx"
            ]
         }
      }
   },
   "env": {
      "browser": true,
      "es2020": true,
      "node": true,
      "jest": true
   },
   "extends": [
      "plugin:react/recommended",
      "airbnb",
      "plugin:@typescript-eslint/recommended",
      "prettier"
   ],
   "parser": "@typescript-eslint/parser",
   "parserOptions": {
      "ecmaFeatures": {
         "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
   },
   "plugins": [
      "react",
      "@typescript-eslint",
      "prettier"
   ],
   "rules": {
      "import/extensions": [
         "error",
         "ignorePackages",
         {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
         }
      ],
      "semi": [
         "warn",
         "always"
      ],
      "no-unused-vars": "warn",
      "camelcase": "off",
      "prettier/prettier": "error",
      "react/jsx-props-no-spreading": "off",
      "space-before-function-paren": "off",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-filename-extension": [
         1,
         {
            "extensions": [
               ".js",
               ".jsx"
            ]
         }
      ]
   }
}
